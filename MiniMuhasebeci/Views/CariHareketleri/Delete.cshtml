@model MiniMuhasebeci.Models.tblCariHareketleri

@{
    ViewBag.Title = "Delete";
}

<br />
<br />
<br />

<p style="font-family: 'Poppins', sans-serif;font-size:20px">@Model.tblCari.Unvan 'lı carinin hareketini silmek istiyor musunuz?</p>

<br />
<br />
<br />

<div style="align-items:center">
    @using (Html.BeginForm("Delete", "CariHareketleri", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group" style="margin:auto auto;">
            <div>
                <button type="submit" value="Delete" style="
                background: #db1229;
                height:45px;
                margin-left:10px;
                outline: none;
                padding: 8px;
                border-radius: 5px;
                color: white;
                font-size: 20px;
                font-weight: 700;
                border: 1px solid white;
                cursor: pointer;">
                    Evet
                </button>

                <a href="@Url.Action("Index")" style="
                background: #fff;
                margin-right:10px;
                text-decoration:none;
                outline: none;
                padding: 8px;
                border-radius: 5px;
                color: #d63031;
                font-size: 20px;
                font-weight: 700;
                border: 1px solid #db1229;
                cursor: pointer;">Hayır</a>


            </div>
        </div>
    }
</div>
